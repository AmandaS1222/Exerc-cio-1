programa {
  funcao inicio() {
    // Variável
    inteiro a, b, c, maior, menor 

    // Solicitando dados

    escreva("Digite o valor A : ")
    leia(a)

    escreva("Digite o valor B: ")
    leia(b)

    escreva("Digite o valor C: ")
    leia(c)

    // Calculando

    se (a + b < c){
      escreva("O valor C é maior")
    }

    se (a + b > c){
      escreva("O valor C é menor")
    }
  }
}
